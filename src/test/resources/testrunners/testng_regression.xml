<?xml version="1.0" encoding="UTF-8"?>


<suite name="Open Cart Test Suite" verbose="4" thread-count="2"
	parallel="tests">

	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />

	</listeners>
	<test name="Open Cart Login Page Test">

		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	<test name="Open Cart AccountsPage Test">

		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>
	<test name="Open Cart Products Info Page Test">

		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>
	<test name="Open Cart Registration Page Test">

		<classes>
			<class name="com.qa.opencart.tests.RegistrationPageTest" />
		</classes>
	</test>
	<test name="Open Cart Search Results Page Test">

		<classes>
			<class name="com.qa.opencart.tests.SearchResultsPageTest" />
		</classes>
	</test>
</suite>